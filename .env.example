#
# Spacewalkers Email Configuration
# Copy this file to `.env` and fill in the values as needed.
#

# console | sendgrid | zeptomail | twilio | mailgun
EMAIL_PROVIDER=console

# Default verified sender (used when actions omit `from`)
EMAIL_FROM=no-reply@example.com

# Optional override for client-facing confirmation emails
EMAIL_CONFIRMATION_FROM=

# Internal triage inbox for new submissions
EMAIL_COMPANY_INBOX=hello@example.com

# Optional archive / compliance BCC recipient
EMAIL_BCC=

# --- SendGrid ---

# Required when EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=

# --- ZeptoMail ---

# Required when EMAIL_PROVIDER=zeptomail
ZEPTOMAIL_TOKEN=

# Optional override (defaults to https://api.zeptomail.com/v1.1/email)
ZEPTOMAIL_URL=

