---
import Layout from '../layouts/Layout.astro';
import { actions, isInputError } from 'astro:actions';
import logo from '../assets/laguna-bay-logo.png';
import CrewMember from '../components/CrewMember.astro';
import lagunaProfile from '../assets/laguna-profile.png';
import martinProfile from '../assets/martin-profile.jpg';
import joeProfile from '../assets/joe-profile.png';
import panosProfile from '../assets/panos-profile.png';
import luisProfile from '../assets/luis-profile.png';

const contactResult = Astro.getActionResult(actions.contactForm);
const contactInputErrors = isInputError(contactResult?.error) ? contactResult.error.fields : {};
const contactHasInputErrors = Object.keys(contactInputErrors).length > 0;
const contactGeneralError = contactResult?.error && !contactHasInputErrors;
const contactSuccess = contactResult && !contactResult.error;

// Crew members data
const crewMembers = [
	{
		image: lagunaProfile,
		name: 'Jimmy Headrick',
		title: 'Chief Enginerd',
		quote: 'I love you!'
	},
	{
		image: martinProfile,
		name: 'Martin Shaw',
		title: 'PC App Software Tester',
		quote: 'I test software the way a cat tests gravity: methodically, repeatedly, and with great satisfaction when things break unexpectedly.'
	},
    {
        image: joeProfile,
        name: 'Joe Coleman',
        title: 'Software Engineer',
        quote: 'If at first you don\'t succeed... maybe you shouldn\'t take up skydiving.'
    },
    {
        image: panosProfile,
        name: 'Panos /dev/null',
        title: 'Archwizard of Architecture',
        quote: 'Code...erm...finds a way'
    },
    {
        image: luisProfile,
        name: 'Luis Ibarra',
        title: 'Software Engineer',
        quote: 'Strive for progress, not perfection.'
    }
];

// Determine if we need dense layout (more than 8 members)
const isDense = crewMembers.length > 8;

export const prerender = false;
---

<Layout>
	<header class="fixed w-full top-0 z-50 glass-panel border-b-0">
		<div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
			<div class="flex items-center gap-3">
                <img src={logo.src} alt="Laguna Studio Code" class="h-10 w-auto rounded-full" />
                <span class="font-bold text-xl tracking-wider text-white hidden sm:block">LAGUNA STUDIO CODE</span>
            </div>
			<nav class="hidden md:flex gap-8">
				<a href="#experiments" class="hidden hover:text-neon-cyan transition-colors text-gray-300">Experiments</a>
				<a href="#crew" class="hover:text-neon-cyan transition-colors text-gray-300">The Crew</a>
				<a href="#contact" class="text-neon-cyan hover:text-white transition-colors">Contact</a>
			</nav>
            <a href="#contact" class="md:hidden text-neon-cyan">Menu</a>
		</div>
	</header>

	<main>
		<!-- Hero Section -->
		<section class="relative min-h-screen flex items-start lg:items-center justify-center pt-28 sm:pt-32 pb-16 overflow-hidden">
            <!-- Background Elements -->
            <div class="absolute inset-0 z-0">
                <div class="absolute top-0 right-0 w-2/3 h-2/3 bg-deep-magenta/10 blur-[120px] rounded-full translate-x-1/4 -translate-y-1/4"></div>
                <div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-neon-cyan/5 blur-[100px] rounded-full -translate-x-1/4 translate-y-1/4"></div>
                <svg class="absolute inset-0 w-full h-full opacity-20" xmlns="http://www.w3.org/2000/svg">
                    <defs>
                        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
                            <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="0.5"/>
                        </pattern>
                    </defs>
                    <rect width="100%" height="100%" fill="url(#grid)" />
                </svg>
            </div>

			<div class="relative z-10 max-w-7xl mx-auto px-6 grid md:grid-cols-2 gap-12 items-center">
				<div class="space-y-8">
					<div class="inline-block px-4 py-1 rounded-full border border-neon-cyan/30 bg-neon-cyan/10 text-neon-cyan text-sm tracking-widest uppercase">
						Est. 2024
					</div>
					<h1 class="text-5xl md:text-7xl font-bold leading-tight text-white">
						Engineering First. <br />
                        <span class="text-gradient">Everything Else Second.</span>
					</h1>
					<p class="text-xl md:text-2xl text-gray-300 max-w-lg">
						We are a collective of engineers building experimental software, robust platforms, and digital experiences. Got a crazy idea? We might just build it with you.
					</p>
					<div class="flex flex-col sm:flex-row gap-4">
						<a href="#contact" class="btn-primary px-8 py-4 rounded text-center">Let's Build</a>
						<a href="#experiments" class="hidden btn-secondary px-8 py-4 rounded text-center">Check Build Log</a>
					</div>
				</div>
                <div class="hidden md:flex items-center justify-center relative">
                    <!-- Hero Graphic / Logo Mark -->
                    <div class="relative w-full max-w-md aspect-square flex items-center justify-center">
                         <div class="absolute inset-0 bg-gradient-to-tr from-neon-cyan/20 to-deep-magenta/20 rounded-full blur-3xl animate-pulse-slow"></div>
                         <img src={logo.src} alt="Laguna Emblem" class="relative z-10 w-2/3 h-2/3 object-contain drop-shadow-[0_0_30px_rgba(102,252,241,0.3)] rounded-full" />
                    </div>
                </div>
			</div>
		</section>

        <!-- What We Tinker With -->
        <section class="py-24 bg-space-black relative">
             <div class="max-w-7xl mx-auto px-6">
                <div class="text-center mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Our Stack & Playground</h2>
                    <p class="text-xl text-gray-400 max-w-2xl mx-auto">We don't just glue APIs together. We build systems.</p>
                </div>
                
                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                    <!-- Card 1 -->
                    <div class="glass-panel p-6 rounded-xl hover:-translate-y-1 transition-transform duration-300 border-t-4 border-t-neon-cyan">
                        <h3 class="text-xl font-bold text-white mb-3">Full-Stack Systems</h3>
                        <p class="text-sm text-gray-400">From React/Next.js frontends to distributed Go/Rust backends. If it runs on Linux, we can build it.</p>
                    </div>
                    <!-- Card 2 -->
                    <div class="glass-panel p-6 rounded-xl hover:-translate-y-1 transition-transform duration-300 border-t-4 border-t-deep-magenta">
                        <h3 class="text-xl font-bold text-white mb-3">AI & Agents</h3>
                        <p class="text-sm text-gray-400">Beyond the hype. Practical LLM integrations, RAG pipelines, and autonomous agents that actually do work.</p>
                    </div>
                    <!-- Card 3 -->
                    <div class="glass-panel p-6 rounded-xl hover:-translate-y-1 transition-transform duration-300 border-t-4 border-t-neon-teal">
                        <h3 class="text-xl font-bold text-white mb-3">Creative Coding</h3>
                        <p class="text-sm text-gray-400">WebGL, interactive 3D, and experimental UI. Making the web feel magical again.</p>
                    </div>
                     <!-- Card 4 -->
                    <div class="glass-panel p-6 rounded-xl hover:-translate-y-1 transition-transform duration-300 border-t-4 border-t-white">
                        <h3 class="text-xl font-bold text-white mb-3">Infrastructure</h3>
                        <p class="text-sm text-gray-400">Kubernetes, Serverless, Edge. We obsess over deployment velocity and reliability.</p>
                    </div>
                </div>
             </div>
        </section>

        <!-- Build Log (Experiments) -->
        <section id="experiments" class="hidden py-24 relative overflow-hidden bg-space-dark/30">
            <div class="relative z-10 max-w-7xl mx-auto px-6">
                <div class="flex flex-col md:flex-row md:items-end justify-between mb-12 gap-4">
                    <div>
                        <h2 class="text-3xl md:text-4xl font-bold text-white mb-2">Recent Experiments</h2>
                        <p class="text-xl text-gray-400">Things we've shipped recently. Some for clients, some for fun.</p>
                    </div>
                    <div class="text-neon-cyan font-mono text-sm">
                        &gt; tail -f /var/log/builds
                    </div>
                </div>

                <div class="space-y-4">
                    <!-- Project Alpha -->
                    <div class="group block p-6 bg-black/40 border border-gray-800 hover:border-neon-cyan/50 rounded-lg transition-all">
                        <div class="flex flex-col md:flex-row justify-between gap-4">
                            <div>
                                <div class="flex items-center gap-3 mb-2">
                                    <h3 class="text-xl font-bold text-white group-hover:text-neon-cyan transition-colors">Project Alpha</h3>
                                    <span class="px-2 py-0.5 text-xs rounded bg-neon-cyan/10 text-neon-cyan border border-neon-cyan/20">Shipped</span>
                                </div>
                                <p class="text-gray-400">High-performance vector search engine wrapper optimized for low-latency queries.</p>
                            </div>
                            <div class="flex items-center gap-4 text-sm font-mono text-gray-500">
                                <span>Rust</span>
                                <span>â€¢</span>
                                <span>gRPC</span>
                            </div>
                        </div>
                    </div>

                     <!-- Project Beta -->
                    <div class="group block p-6 bg-black/40 border border-gray-800 hover:border-deep-magenta/50 rounded-lg transition-all">
                        <div class="flex flex-col md:flex-row justify-between gap-4">
                            <div>
                                <div class="flex items-center gap-3 mb-2">
                                    <h3 class="text-xl font-bold text-white group-hover:text-deep-magenta transition-colors">Project Beta</h3>
                                    <span class="px-2 py-0.5 text-xs rounded bg-yellow-500/10 text-yellow-500 border border-yellow-500/20">In Progress</span>
                                </div>
                                <p class="text-gray-400">Real-time collaboration canvas for music theory education using WebSockets and CRDTs.</p>
                            </div>
                            <div class="flex items-center gap-4 text-sm font-mono text-gray-500">
                                <span>Next.js</span>
                                <span>â€¢</span>
                                <span>Yjs</span>
                            </div>
                        </div>
                    </div>

                     <!-- Project Gamma -->
                    <div class="group block p-6 bg-black/40 border border-gray-800 hover:border-neon-teal/50 rounded-lg transition-all">
                        <div class="flex flex-col md:flex-row justify-between gap-4">
                            <div>
                                <div class="flex items-center gap-3 mb-2">
                                    <h3 class="text-xl font-bold text-white group-hover:text-neon-teal transition-colors">Project Gamma</h3>
                                    <span class="px-2 py-0.5 text-xs rounded bg-neon-cyan/10 text-neon-cyan border border-neon-cyan/20">Shipped</span>
                                </div>
                                <p class="text-gray-400">Automated investing agent with strict risk rails and verifiable decision logging.</p>
                            </div>
                            <div class="flex items-center gap-4 text-sm font-mono text-gray-500">
                                <span>Python</span>
                                <span>â€¢</span>
                                <span>LangChain</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- The Crew (About) -->
        <section id="crew" class="py-24 bg-space-black border-t border-white/5">
            <div class="max-w-7xl mx-auto px-6">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Meet The Crew</h2>
                    <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
                        We aren't salespeople. We're the engineers you usually wish you could talk to directly. 
                        We've built products with larger companies but prefer the freedom of the studio.
                    </p>
                </div>
                
                <!-- Crew Grid -->
                <div class={`crew-grid ${isDense ? 'crew-grid-dense' : ''}`}>
                    {crewMembers.map((member) => (
                        <CrewMember
                            image={member.image}
                            name={member.name}
                            title={member.title}
                            quote={member.quote}
                        />
                    ))}
                </div>
            </div>
        </section>

		<!-- Contact Section -->
        <section id="contact" class="py-24 bg-gradient-to-b from-space-black to-space-dark border-t border-white/10">
			<div class="max-w-5xl mx-auto px-6 grid md:grid-cols-5 gap-12">
				<div class="md:col-span-2">
					<h2 class="text-4xl font-bold text-white mb-6">Open a Channel</h2>
					<p class="text-lg text-gray-400 mb-8">
						Have a project in mind? Or just want to talk shop? We're open to interesting work requests and collaborations.
					</p>
                    
                    <div class="space-y-4 text-gray-300">
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center text-neon-cyan">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                                </svg>
                            </div>
                            <span>hello@lagunastudiocode.com</span>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center text-neon-cyan">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                                </svg>
                            </div>
                            <span>Remote / Distributed</span>
                        </div>
                    </div>
				</div>

				<form
					method="POST"
					action={actions.contactForm}
					class="md:col-span-3 bg-white/5 p-8 rounded-xl border border-white/10 space-y-6"
				>
					{contactSuccess && (
						<div class="p-4 bg-neon-cyan/10 border border-neon-cyan/30 rounded text-center text-neon-cyan text-sm">
							Signal received. We'll be in touch.
						</div>
					)}
					{contactGeneralError && (
						<div class="p-4 bg-rose-500/10 border border-rose-500/30 rounded text-center text-rose-400 text-sm">
							Transmission failed. Please try again later.
						</div>
					)}
                    
                    <div class="grid md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label for="name" class="block text-xs font-mono text-gray-400 uppercase tracking-wider">Name</label>
                            <input type="text" id="name" name="name" required class="w-full bg-black/50 border border-gray-700 rounded px-4 py-2 focus:border-neon-cyan focus:outline-none text-white transition-colors" placeholder="Name">
							{contactInputErrors.name && (
								<p class="text-sm text-rose-400">
									{contactInputErrors.name.join(', ')}
								</p>
							)}
                        </div>
                        <div class="space-y-2">
                            <label for="email" class="block text-xs font-mono text-gray-400 uppercase tracking-wider">Email</label>
                            <input type="email" id="email" name="email" required class="w-full bg-black/50 border border-gray-700 rounded px-4 py-2 focus:border-neon-cyan focus:outline-none text-white transition-colors" placeholder="email@domain.com">
							{contactInputErrors.email && (
								<p class="text-sm text-rose-400">
									{contactInputErrors.email.join(', ')}
								</p>
							)}
                        </div>
                    </div>

                     <div class="space-y-2">
                        <label for="type" class="block text-xs font-mono text-gray-400 uppercase tracking-wider">Signal Type</label>
                        <select id="type" name="type" class="w-full bg-black/50 border border-gray-700 rounded px-4 py-2 focus:border-neon-cyan focus:outline-none text-white transition-colors">
                            <option value="project">Project Request</option>
                            <option value="collab">Collaboration Idea</option>
                            <option value="hello">Just Saying Hi</option>
                        </select>
                    </div>

                    <div class="space-y-2">
                        <label for="message" class="block text-xs font-mono text-gray-400 uppercase tracking-wider">Payload</label>
                        <textarea id="message" name="message" rows="4" class="w-full bg-black/50 border border-gray-700 rounded px-4 py-2 focus:border-neon-cyan focus:outline-none text-white transition-colors font-mono text-sm" placeholder="Tell us what you want to build. Technical details encouraged."></textarea>
						{contactInputErrors.message && (
							<p class="text-sm text-rose-400">
								{contactInputErrors.message.join(', ')}
							</p>
						)}
                    </div>

					<button type="submit" class="w-full btn-primary py-3 rounded font-bold text-lg uppercase tracking-widest">
						Send Signal
					</button>
				</form>
			</div>
		</section>
	</main>

    <footer class="py-8 border-t border-white/5 text-center text-gray-600 text-sm">
        <p>&copy; {new Date().getFullYear()} Laguna Studio Code. All rights reserved. | <span class="text-gray-700">Built with â˜• and ðŸ’»</span></p>
    </footer>
</Layout>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        type SignalType = 'project' | 'collab' | 'hello';

        const placeholders: Record<SignalType, string> = {
            project: 'Tell us what you want to build. Technical details encouraged.',
            collab: 'Describe your collaboration idea and how we might work together.',
            hello: 'Drop a quick noteâ€”what you are up to and how you found us.'
        };

        const typeField = document.getElementById('type') as HTMLSelectElement | null;
        const messageField = document.getElementById('message') as HTMLTextAreaElement | null;

        if (!typeField || !messageField) return;

        const updatePlaceholder = () => {
            const selectedType = typeField.value as SignalType;
            messageField.placeholder = placeholders[selectedType] || placeholders.project;
        };

        typeField.addEventListener('change', updatePlaceholder);
        updatePlaceholder();
    });
</script>

<style>
    /* Simple animation utilities */
    .animate-pulse-slow {
        animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    
    @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: .8; }
    }

    /* Crew Grid Layout */
    .crew-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        justify-content: center;
        align-items: start;
        margin: 0 auto;
        width: min(1200px, 100%);
    }
    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        justify-content: center;
        align-items: start;
        margin: 0 auto;
        width: min(1200px, 100%);
    }

    /* Dense layout for teams with more than 8 members */
    .crew-grid-dense {
        grid-template-columns: repeat(auto-fit, minmax(250px, 320px));
        gap: 1.5rem;
    }

    /* Responsive adjustments */
    @media (max-width: 640px) {
        .crew-grid {
            grid-template-columns: 1fr;
            max-width: 400px;
            margin: 0 auto;
        }
        
        .crew-grid-dense {
            grid-template-columns: 1fr;
            max-width: 320px;
        }
    }

    @media (min-width: 641px) and (max-width: 1024px) {
        .crew-grid {
            grid-template-columns: repeat(auto-fit, minmax(280px, 350px));
        }
        
        .crew-grid-dense {
            grid-template-columns: repeat(auto-fit, minmax(240px, 300px));
        }
    }

    @media (min-width: 1200px) {
        .crew-grid {
            grid-template-columns: repeat(3, minmax(270px, 1fr));
        }
        .crew-grid-dense {
            grid-template-columns: repeat(3, minmax(250px, 1fr));
        }
        .values-grid {
            grid-template-columns: repeat(3, minmax(250px, 1fr));
        }
    }
</style>
